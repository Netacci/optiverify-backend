# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/supplyai

# JWT Secrets
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# CORS Configuration
# Option 1: Use ALLOWED_ORIGINS (comma-separated list) - Recommended
# This makes it easy to manage all allowed origins in one place
ALLOWED_ORIGINS=http://localhost:3002,http://localhost:3003,http://localhost:3004,http://localhost:3000,http://localhost:3001

# Option 2: Use individual URL variables (for backward compatibility)
# If ALLOWED_ORIGINS is not set, these will be used instead
FRONTEND_URL=http://localhost:3002
CUSTOMER_DASHBOARD_URL=http://localhost:3004
ADMIN_DASHBOARD_URL=http://localhost:3003

# Email Service (Resend)
RESEND_API_KEY=your_resend_api_key_here
RESEND_FROM_EMAIL=noreply@yourdomain.com

# Stripe
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# AI Service (OpenAI)
OPENAI_API_KEY=your_openai_api_key_here
