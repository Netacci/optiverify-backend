# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/supplyai

# JWT Secrets
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# Frontend URLs
# Public frontend (homepage, submit request, etc.)
FRONTEND_URL=http://localhost:3002

# Customer dashboard (authenticated customer portal)
CUSTOMER_DASHBOARD_URL=http://localhost:3004

# Admin dashboard
ADMIN_DASHBOARD_URL=http://localhost:3003

# Email Service (Resend)
RESEND_API_KEY=your_resend_api_key_here
RESEND_FROM_EMAIL=noreply@yourdomain.com

# Stripe
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# AI Service (OpenAI)
OPENAI_API_KEY=your_openai_api_key_here
